(load "anima.carp")
(use Anima)

(def s 600)
(def n-lines 50)

(defn lines-from [a r x y]
  (for [i 0 n-lines]
    (let-do [whitish (Anima.random-between 80 255)]
      (color a r whitish whitish whitish 255)
      (line a r x y (Anima.random s) (Anima.random s)))))

(defn draw [app rend]
  (do
    (background app rend 0 0 0 255)
    (lines-from app rend 0 0)
    (lines-from app rend 0 s)
    (lines-from app rend s 0)
    (lines-from app rend s s)))

(defsketch "example" s s
  draw)
